# Server
APP_NAME=LLM Duel Arena
APP_DEBUG=true
APP_SECRET_KEY=change_me_to_random_secret_key_minimum_32_characters
DEPLOYMENT_MODE=local

# AWS Cognito - Required for user authentication
# Setup Instructions: See docs/LOCAL_TESTING_GUIDE.md
USE_COGNITO=true
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_CLIENT_SECRET=  # Optional, only if app client has secret
COGNITO_REGION=us-east-1
COGNITO_DOMAIN=your-domain.auth.us-east-1.amazoncognito.com
COGNITO_CALLBACK_URL=http://localhost:8000/auth/callback
COGNITO_LOGOUT_URL=http://localhost:8000/
COGNITO_SCOPES=openid email profile

# AWS Credentials (for DynamoDB access)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_PROFILE=  # Optional, leave empty to use default profile

# DynamoDB Tables
DYNAMODB_TABLE_NAME=llm-duel-arena-games-int
SESSION_TABLE_NAME=LLM-Duel-Sessions
USE_DYNAMODB_SESSIONS=false  # Set to true to use DynamoDB for session storage (required for AWS Lambda)

# Models
DEFAULT_WHITE_MODEL=ollama:llama3.1:latest
DEFAULT_BLACK_MODEL=ollama:mistral-nemo:latest

# OpenAI (unused when using Ollama)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic (unused when using Ollama)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# Local (HF Transformers) - optional
LOCAL_MODEL_ID=meta-llama/Llama-3.1-8B-Instruct
ENABLE_LOCAL_MODEL=false

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Runtime
REQUEST_TIMEOUT_SECONDS=30
MOVE_RETRY_LIMIT=2
TOKEN_BUDGET_PER_MATCH=20000

# CORS Configuration
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Rate Limiting
ENABLE_RATE_LIMITING=true

# ========================================
# AWS Configuration
# ========================================
AWS_REGION_NAME=us-east-1

# AWS Credentials (NOT recommended for production - use IAM roles instead)
# For local development only
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ========================================
# DynamoDB Tables (Use the same names as in template.yaml)
# ========================================
DYNAMODB_TABLE_USERS=LLM-Duel-Users
DYNAMODB_TABLE_ACTIVE_GAMES=LLM-Duel-ActiveGames
SESSION_TABLE_NAME=LLM-Duel-Sessions

# ========================================
# API Keys (Replace with your actual keys)
# ========================================
# HUGGINGFACE_API_TOKEN=your_token_here
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here

# ========================================
# SECURITY: SECRET KEY (REQUIRED)
# ========================================
# Generate a strong random key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
APP_SECRET_KEY=change_this_to_a_random_string_IMMEDIATELY

# ========================================
# Application Configuration
# ========================================
LOG_LEVEL=DEBUG  # Use INFO or WARNING in production
ENABLE_LOCAL_MODEL=true
DEPLOYMENT_MODE=local  # Set to 'aws' in production

# ========================================
# Security Settings
# ========================================

# CORS - Comma-separated list of allowed origins
# For local: http://localhost:8000,http://127.0.0.1:8000
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Rate Limiting
ENABLE_RATE_LIMITING=true

# Session Storage
# Set to true when deploying to AWS to use DynamoDB for sessions
# Leave false for local development (uses in-memory storage)
USE_DYNAMODB_SESSIONS=false

# AWS Secrets Manager (optional - enhanced security)
# Set to true to fetch API keys from AWS Secrets Manager instead of env vars
USE_SECRETS_MANAGER=false
SECRETS_MANAGER_PREFIX=llm-duel-arena

# OAuth Redirect URIs - Comma-separated whitelist
# Must match exactly with OAuth provider configuration
ALLOWED_REDIRECT_URIS=http://localhost:8000/auth/callback,http://127.0.0.1:8000/auth/callback

# ========================================
# OAuth Configuration (Google - Legacy)
# ========================================
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# ========================================
# AWS Cognito Configuration
# ========================================
USE_COGNITO=false
# COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
# COGNITO_CLIENT_ID=your_cognito_client_id
# COGNITO_CLIENT_SECRET=your_cognito_client_secret
# COGNITO_REGION=us-east-1
# COGNITO_DOMAIN=your-domain.auth.us-east-1.amazoncognito.com
# COGNITO_CALLBACK_URL=http://localhost:8000/auth/callback
# COGNITO_LOGOUT_URL=http://localhost:8000/
# COGNITO_SCOPES=openid email profile

# ========================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ========================================
# Before deploying to production:
# 
# 1. SECRET_KEY: Generate and set a strong random key (32+ bytes)
# 2. DEPLOYMENT_MODE: Set to 'aws'
# 3. LOG_LEVEL: Set to 'INFO' or 'WARNING'
# 4. CORS_ORIGINS: Set to your production domain(s) only
# 5. USE_DYNAMODB_SESSIONS: Set to 'true'
# 6. ALLOWED_REDIRECT_URIS: Add your production OAuth callback URL
# 7. API Keys: Consider using AWS Secrets Manager (USE_SECRETS_MANAGER=true)
# 8. HTTPS: Ensure your domain has valid SSL certificate
# 9. Billing: Set up CloudWatch billing alarms in AWS
# 10. IAM: Use IAM roles for Lambda (don't use AWS_ACCESS_KEY_ID in production)
